# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://cmqtnppqpksvyhtqrcqi.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
# Alternative: NEXT_PUBLIC_SUPABASE_PUBLISHABLE_DEFAULT_KEY can also be used

# JWT Secret (for custom auth if needed)
# JWT Secret - REQUIRED: Must be at least 32 characters
# Generate with: openssl rand -base64 32
# DO NOT use default/weak values in production!
JWT_SECRET=your_jwt_secret_here_minimum_32_characters

# Optional: Customize token expiration
JWT_EXPIRES_IN=1h                    # Access token expiration (default: 1h)
JWT_REFRESH_EXPIRES_IN=7d           # Refresh token expiration (default: 7d)

# Environment
NODE_ENV=development

# CORS Configuration
# Comma-separated list of allowed origins (e.g., "https://app.example.com,https://admin.example.com")
# Use "*" for development only (NOT recommended for production)
ALLOWED_ORIGINS=https://yourdomain.com,https://admin.yourdomain.com

# Debug Endpoints (Production)
# Set to "true" to enable debug endpoints in production (NOT recommended)
ENABLE_DEBUG_ENDPOINTS=false

# Admin IP Whitelist (Production)
# Comma-separated list of IP addresses allowed to access admin dashboard
# Leave empty to allow all IPs (development only - NOT recommended for production)
# Example: ADMIN_IP_WHITELIST=192.168.1.100,10.0.0.50
ADMIN_IP_WHITELIST=

# Paystack Configuration
PAYSTACK_SECRET_KEY=your_paystack_secret_key_here
NEXT_PUBLIC_PAYSTACK_PUBLIC_KEY=your_paystack_public_key_here
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Web Push (VAPID) Configuration
# Generate keys with: npx web-push generate-vapid-keys
NEXT_PUBLIC_VAPID_PUBLIC_KEY=your_vapid_public_key_here
VAPID_PRIVATE_KEY=your_vapid_private_key_here
VAPID_SUBJECT=mailto:support@yourdomain.com
